---
import Icon from './Icon.astro'
---

<div class="flex flex-col h-screen p-3 w-[15%] bg-gray-900 text-gray-100 justify-between">
	<div class="space-y-3">
		<div class="flex items-center justify-between">
			<h2>Dashboard</h2>
			<button class="p-2">
				<!-- <Icon iconName='expand' /> -->
        <Icon iconName='collapse' />
			</button>
		</div>
        <div class="flex items-center p-2 space-x-4">
            <img src="https://tecdn.b-cdn.net/img/Photos/Avatars/img%20(29).webp" alt="" class="w-12 h-12 rounded-full bg-gray-500">
            <div>
                <h2 class="text-lg font-semibold">Ashish M</h2>
                <span class="flex items-center space-x-1">
                    <a rel="noopener noreferrer" href="#" class="text-xs hover:underline text-gray-400">View profile settings</a>
                </span>
            </div>
        </div>
        <hr class="bg-gray-700">
		<div class="">
			<ul class="pt-2 pb-4 space-y-1 text-sm">
				<li class="rounded-sm bg-gray-800"> <!-- bg-gray-800 for active-->
					<a rel="noopener noreferrer" href="#" class="flex items-center p-2 space-x-3 rounded-md">
						<Icon iconName='home' />
						<span>Home</span>
					</a>
				</li>
        <li class="rounded-sm">
          <a rel="noopener noreferrer" href="#" class="flex items-center p-2 space-x-3 rounded-md">
            <Icon iconName='grid' />
            <span>Add new item</span>
          </a>
        </li>
				<li class="rounded-sm">
					<a rel="noopener noreferrer" href="#" class="flex items-center p-2 space-x-3 rounded-md">
            <Icon iconName='favorite' />
						<span>Favorite</span>
					</a>
				</li>
				
			</ul>
            <hr class="">
		</div>
	</div>
    
	<div class="flex items-center p-2 mt-12 space-x-4 justify-self-end">
        <ul>
            <li class="rounded-sm">
                <a rel="noopener noreferrer" href="#" class="flex items-center p-2 space-x-3 rounded-md">
                  <Icon iconName='settings' />
                    <span>Settings</span>
                </a>
            </li>
            <li class="rounded-sm">
                <a rel="noopener noreferrer" href="#" class="flex items-center p-2 space-x-3 rounded-md">
                  <Icon iconName='logout' />
                    <span>Logout</span>
                </a>
            </li>
        </ul>
	</div>
</div>