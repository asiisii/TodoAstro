---
import { iconPaths } from '../utils/icons';

interface Props {
  iconName: keyof typeof iconPaths;
}

const { iconName } = Astro.props;
const iconKey = iconPaths[iconName];
---

<!-- /**
 * Icons adapted from https://phosphoricons.com/
 *
 * Want to add more?
 * 1. Find the icon you want on Phosphor Icons.
 * 2. Click “Copy SVG”.
 * 3. Paste the SVG code in your editor.
 * 4. Remove the `<svg>` wrapper so you only have elements like `<path>`, `<circle>`, `<rect>` etc.
 */ -->
<svg
  xmlns='http://www.w3.org/2000/svg'
  width='32'
  height='32'
  fill={iconKey.color}
  viewBox='0 0 256 256'
>
  <g set:html={iconKey.path} />
</svg>
